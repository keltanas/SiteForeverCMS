{
    "name" : "keltanas/site-forever-cms",
    "description": "Simple CMS for PHP and MySQL",
    "keywords": [ "siteforever", "cms", "smarty", "php", "keltanas" ],
    "homepage": "http://siteforever.ru",
    "license": "MIT",
    "authors" : [
        {
            "name" : "Nikolay A. Ermin",
            "email" : "keltanas@gmail.com",
            "homepage": "http://ermin.ru",
            "role": "Developer"
        }
    ],
    "support" : {
        "email" : "keltanas@gmail.com",
        "source" : "https://github.com/keltanas/SiteForeverCMS",
        "issues" : "https://github.com/keltanas/SiteForeverCMS/issues",
        "wiki" : "http://wiki.siteforever.ru"
    },
    "autoload": {
        "psr-0" : {
            "" : ["class/","lib/"],
            "Sfcms" : "class/",
            "Module" : ["class/"],
            "Std" : "class/",
            "Forms" : ["class/"]
        },
        "files" : ["class/Functions.php"]
    },
    "include-path": ["./", "lib/","class/"],
    "require-dev": {
        "phpunit/php-invoker": "1.1.*",
        "phpunit/phpunit": "3.7.*",
        "phpunit/phpunit-mock-objects": "1.2.*",
        "phpunit/php-code-coverage": "1.2.*",
        "phpunit/php-file-iterator": "1.3.*",
        "phpunit/phpunit-selenium": "1.2.*"
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/browser-kit": "2.3.*",
        "symfony/config": "2.3.*",
        "symfony/console": "2.3.*",
        "symfony/dom-crawler": "2.3.*",
        "symfony/event-dispatcher": "2.3.*",
        "symfony/filesystem": "2.3.*",
        "symfony/finder": "2.3.*",
        "symfony/http-foundation": "2.3.*",
        "symfony/process": "2.3.*",
        "symfony/security": "2.3.*",

        "smarty/smarty": "3.1.*",
        "twitter/bootstrap": "v2.3.1",
        "firephp/firephp-core": "v0.4.0",
        "ccampbell/chromephp": "4.0.0",
        "tonytomov/jqGrid" : "4.4",
        "helios-ag/fm-elfinder": "2.*@dev",
        "swiftmailer/swiftmailer": "v5.0.0",
        "kriswallsmith/assetic": "v1.1.1",
        "symfony/stopwatch": "master-dev",
        "symfony/debug": " 2.3.*@dev",
        "symfony/dependency-injection": " 2.3.*@dev"
    },
    "repositories":[
        {
            "type":"package",
            "package":{
                "name":"tonytomov/jqGrid",
                "version":"4.4",
                "source":{
                    "type":"git",
                    "url":"https://github.com/tonytomov/jqGrid",
                    "reference":"tags/v4.4.5"
                }
            }
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "Sfcms\\Assetic\\ComposerHandler::installAdmin",
            "Sfcms\\JqGrid\\ComposerHandler::installAssets",
            "Sfcms\\ElFinder\\ComposerHandler::installAssets"
        ],
        "post-update-cmd": [
            "Sfcms\\Assetic\\ComposerHandler::installAdmin",
            "Sfcms\\JqGrid\\ComposerHandler::installAssets",
            "Sfcms\\ElFinder\\ComposerHandler::installAssets"
        ]
    },
    "minimum-stability": "stable",
    "extra": {
        "sfcms-static-dir" : "static",
        "branch-alias": {
            "dev-master": "0.5-dev"
        }
    }
}
