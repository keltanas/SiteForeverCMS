{
    "name" : "siteforever/site-forever-cms",
    "description": "Simple CMS for PHP and MySQL",
    "keywords": [ "siteforever", "cms", "smarty", "php", "keltanas", "firetroop" ],
    "homepage": "http://siteforever.ru",
    "license": "MIT",
    "authors" : [
        {
            "name" : "Nikolay A. Ermin",
            "email" : "keltanas@gmail.com",
            "homepage": "http://ermin.ru",
            "role": "Developer"
        }
    ],
    "support" : {
        "email" : "keltanas@gmail.com",
        "source" : "https://github.com/siteforever/SiteForeverCMS",
        "issues" : "https://github.com/siteforever/SiteForeverCMS/issues",
        "wiki" : "http://wiki.siteforever.ru"
    },
    "autoload": {
        "psr-0" : {
            "" : ["class/"],
            "Sfcms" : "class/",
            "Module" : ["class/"],
            "Forms" : ["class/"]
        }
    },
    "include-path": ["./", "class/"],
    "require-dev": {
        "behat/behat": "~3.0",
        "behat/mink-extension": "~2.0",
        "behat/mink": "~1.5",
        "behat/mink-browserkit-driver": "1.1.*",
        "behat/mink-goutte-driver": "1.0.*",
        "behat/mink-selenium2-driver": "~1.1",
        "behat/mink-zombie-driver": "~1.1",
        "phpunit/php-invoker": "1.1.*",
        "phpunit/phpunit": "3.7.*",
        "phpunit/phpunit-mock-objects": "1.2.*",
        "phpunit/php-code-coverage": "1.2.*",
        "phpunit/php-file-iterator": "1.3.*"
    },
    "require": {
        "php": ">=5.5",
        "symfony/symfony": "~2.7",
        "symfony/proxy-manager-bridge": "2.5.*",
        "doctrine/orm": "2.4.*",
        "doctrine/migrations": "1.0.*@dev",
        "smarty/smarty": "3.1.19",
        "incenteev/composer-parameter-handler": "~2.0",
        "monolog/monolog": "~1.6",
        "swiftmailer/swiftmailer": "~5.0",
        "kriswallsmith/assetic": "~1.1",
        "twbs/bootstrap": ">=3.2.0,<3.3",
        "ckeditor/ckeditor": "dev-full/4.3.x",
        "studio-42/elfinder": "2.x@dev",
        "tonytomov/jqGrid" : "4.4",
        "mrclay/minify": "2.1.*",
        "natxet/cssmin": "3.0.*"
    },
    "repositories":[
        {
            "type":"package",
            "package":{
                "name":"tonytomov/jqGrid",
                "version":"4.4",
                "dist": {
                    "url": "https://github.com/tonytomov/jqGrid/archive/v4.4.5.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "Sfcms\\ComposerHandler::install",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sfcms\\ComposerHandler::execute"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sfcms\\ComposerHandler::execute"
        ]
    },
    "config": {
        "component-dir": "static/components",
        "component-baseurl": "static",
        "bin-dir": "bin"
    },
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-master": "0.7-dev"
        },
        "incenteev-parameters": {
            "file": "app/parameters.yml",
            "dist-file": "app/parameters.yml.dist"
        }
    },
    "bin": ["bin/console", "bin/pngout", "bin/yuicompressor-2.4.7.jar"]
}
