{
    "name" : "keltanas/site-forever-cms",
    "keywords": [ "siteforever", "cms", "keltanas" ],
    "homepage": "http://siteforever.ru",
    "license": "MIT",
    "authors" : [
        {
            "name" : "Nikolay A. Ermin",
            "email" : "keltanas@gmail.com",
            "homepage": "http://ermin.ru",
            "role": "Developer"
        }
    ],
    "support" : {
        "email" : "keltanas@gmail.com",
        "source" : "https://github.com/keltanas/SiteForeverCMS",
        "issues" : "https://github.com/keltanas/SiteForeverCMS/issues",
        "wiki" : "http://wiki.siteforever.ru"
    },
    "autoload": {
        "psr-0" : {
            "" : ["class/","lib/"],
            "Sfcms" : "class/",
            "Module" : ["class/"],
            "Std" : "class/",
            "Forms" : ["class/"]
        },
        "files" : ["class/Functions.php"]
    },
    "include-path": ["./", "lib/","class/"],
    "require-dev": {
        "phpunit/php-invoker": "1.1.*",
        "phpunit/phpunit": "3.7.*",
        "phpunit/phpunit-mock-objects": "1.2.*",
        "phpunit/php-code-coverage": "1.2.*",
        "phpunit/php-file-iterator": "1.3.*",
        "phpunit/phpunit-selenium": "1.2.*"
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.1.*",
        "smarty/smarty": "3.1.*",
        "firephp/firephp-core": "dev-master",
        "ccampbell/chromephp": "dev-master",
        "tonytomov/jqGrid" : "4.4.4",
        "Studio-42/elFinder" : "2"
    },
    "repositories":[
        {
            "type":"package",
            "package":{
                "name":"tonytomov/jqGrid",
                "version":"4.4.4",
                "source":{
                    "type":"git",
                    "url":"https://github.com/tonytomov/jqGrid",
                    "reference":"master"
                }
            }
        },
        {
            "type":"package",
            "package":{
                "name":"Studio-42/elFinder",
                "version":"2",
                "source":{
                    "type":"git",
                    "url":"https://github.com/Studio-42/elFinder",
                    "reference":"2.x"
                },
                "autoload" : {
                    "psr-0" : {
                        "elFinder" : "php/elFinder.class.php",
                        "elFinderConnector" : "php/elFinderConnector.class.php",
                        "elFinderVolumeDriver" : "php/elFinderVolumeDriver.class.php",
                        "elFinderVolumeFTP" : "php/elFinderVolumeFTP.class.php",
                        "elFinderVolumeLocalFileSystem" : "php/elFinderVolumeLocalFileSystem.class.php",
                        "elFinderVolumeMySQL" : "php/elFinderVolumeMySQL.class.php"
                    }
                }
            }
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "Sfcms\\JqGrid\\ComposerHandler::installAssets",
            "Sfcms\\ElFinder\\ComposerHandler::installAssets"
        ],
        "post-update-cmd": [
            "Sfcms\\JqGrid\\ComposerHandler::installAssets",
            "Sfcms\\ElFinder\\ComposerHandler::installAssets"
        ]
    },
    "extra": {
        "sfcms-static-dir" : "static"
    }
}
