{
    "name" : "keltanas/site-forever-cms",
    "description": "Simple CMS for PHP and MySQL",
    "keywords": [ "siteforever", "cms", "smarty", "php", "keltanas", "firetroop" ],
    "homepage": "http://siteforever.ru",
    "license": "MIT",
    "authors" : [
        {
            "name" : "Nikolay A. Ermin",
            "email" : "keltanas@gmail.com",
            "homepage": "http://ermin.ru",
            "role": "Developer"
        }
    ],
    "support" : {
        "email" : "keltanas@gmail.com",
        "source" : "https://github.com/keltanas/SiteForeverCMS",
        "issues" : "https://github.com/keltanas/SiteForeverCMS/issues",
        "wiki" : "http://wiki.siteforever.ru"
    },
    "autoload": {
        "psr-0" : {
            "" : ["class/"],
            "Sfcms" : "class/",
            "Module" : ["class/"],
            "Forms" : ["class/"]
        }
    },
    "include-path": ["./", "class/"],
    "require-dev": {
        "phpunit/php-invoker": "1.1.*",
        "phpunit/phpunit": "3.7.*",
        "phpunit/phpunit-mock-objects": "1.2.*",
        "phpunit/php-code-coverage": "1.2.*",
        "phpunit/php-file-iterator": "1.3.*"
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/symfony": "2.4.*",
        "smarty/smarty": "~3.1",
        "incenteev/composer-parameter-handler": "~2.0",
        "monolog/monolog": "~1.6",
        "swiftmailer/swiftmailer": "~5.0",
        "kriswallsmith/assetic": "~1.1",
        "ckeditor/ckeditor": "~4.3",
        "helios-ag/fm-elfinder": "v2.0",
        "tonytomov/jqGrid" : "4.4",
        "leafo/lessphp": "~0.4",
        "mrclay/minify": "2.1.*",
        "natxet/cssmin": "3.0.*"
    },
    "repositories":[
        {
            "type":"package",
            "package":{
                "name":"tonytomov/jqGrid",
                "version":"4.4",
                "source":{
                    "type":"git",
                    "url":"https://github.com/tonytomov/jqGrid",
                    "reference":"tags/v4.4.5"
                }
            }
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sfcms\\ComposerHandler::execute"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sfcms\\ComposerHandler::execute"
        ]
    },
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-master": "0.6-dev"
        },
        "incenteev-parameters": {
            "file": "app/parameters.yml",
            "dist-file": "app/parameters.yml.dist"
        }
    }
}
